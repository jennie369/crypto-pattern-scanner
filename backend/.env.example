# GEM Master Backend Environment Variables
# Copy this to .env and fill in the values

# App Settings
APP_NAME=GEM Master Backend
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Redis (Railway provides this automatically)
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# AI Services
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key  # For Whisper transcription

# Zalo OA (Optional - for Zalo integration)
ZALO_APP_ID=
ZALO_APP_SECRET=
ZALO_OA_ID=
ZALO_ACCESS_TOKEN=
ZALO_REFRESH_TOKEN=
ZALO_WEBHOOK_SECRET=

# Facebook Messenger (Optional - for Messenger integration)
FB_PAGE_ACCESS_TOKEN=
FB_VERIFY_TOKEN=gem-master-verify
FB_APP_SECRET=

# Rate Limits
WS_MAX_CONNECTIONS_PER_USER=5
WS_MESSAGE_RATE_LIMIT=30
API_RATE_LIMIT=100

# Timeouts
AI_RESPONSE_TIMEOUT=30
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300
