.top-nav-bar {
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #1a2847, #0f1b35);
  border-bottom: 2px solid rgba(255, 189, 89, 0.2);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  z-index: 1000;
}

.nav-container {
  max-width: 1920px;
  margin: 0 auto;
  padding: 12px 24px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 32px;
}

.nav-logo {
  display: flex;
  align-items: center;
  gap: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.nav-logo:hover {
  transform: scale(1.05);
}

.logo-icon {
  font-size: 36px;
  filter: drop-shadow(0 0 8px rgba(255, 189, 89, 0.5));
  animation: gemPulse 2s ease-in-out infinite;
}

@keyframes gemPulse {
  0%, 100% {
    filter: drop-shadow(0 0 8px rgba(255, 189, 89, 0.5));
  }
  50% {
    filter: drop-shadow(0 0 16px rgba(255, 189, 89, 0.8));
  }
}

.logo-text {
  display: flex;
  flex-direction: column;
}

.logo-title {
  color: #FFBD59;
  font-size: 18px;
  font-weight: 800;
  letter-spacing: 1px;
  line-height: 1;
  font-family: 'Montserrat', sans-serif;
}

.logo-subtitle {
  color: #DEBC81;
  font-size: 12px;
  font-weight: 600;
  letter-spacing: 2px;
  font-family: 'Montserrat', sans-serif;
}

.nav-menu {
  display: flex;
  align-items: center;
  gap: 8px;
  flex: 1;
}

.nav-item {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 20px;
  background: rgba(17, 34, 80, 0.4);
  border: 1px solid rgba(255, 189, 89, 0.2);
  border-radius: 12px;
  color: white;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
  font-family: 'Montserrat', sans-serif;
}

.nav-item:hover {
  background: rgba(255, 189, 89, 0.1);
  border-color: #FFBD59;
  transform: translateY(-2px);
}

.nav-item.active {
  background: linear-gradient(135deg, rgba(255, 189, 89, 0.3), rgba(255, 189, 89, 0.15));
  border-color: #FFBD59;
  box-shadow:
    0 0 16px rgba(255, 189, 89, 0.3),
    inset 0 0 12px rgba(255, 189, 89, 0.1);
}

.nav-icon {
  font-size: 18px;
}

.nav-label {
  white-space: nowrap;
}

.nav-badge {
  background: linear-gradient(135deg, #F44336, #E91E63);
  color: white;
  font-size: 10px;
  font-weight: 700;
  padding: 2px 6px;
  border-radius: 4px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  animation: badgePulse 2s ease-in-out infinite;
}

@keyframes badgePulse {
  0%, 100% {
    box-shadow: 0 0 4px rgba(244, 67, 54, 0.3);
  }
  50% {
    box-shadow: 0 0 12px rgba(244, 67, 54, 0.6);
  }
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 8px;
  flex-shrink: 0;
}

.nav-label-desktop {
  display: inline;
}

.mobile-menu-toggle {
  display: none;
  background: none;
  border: none;
  cursor: pointer;
  padding: 8px;
}

.hamburger {
  display: flex;
  flex-direction: column;
  gap: 4px;
  width: 24px;
}

.hamburger span {
  width: 100%;
  height: 3px;
  background: #FFBD59;
  border-radius: 2px;
  transition: all 0.3s ease;
}

.hamburger.open span:nth-child(1) {
  transform: rotate(45deg) translate(6px, 6px);
}

.hamburger.open span:nth-child(2) {
  opacity: 0;
}

.hamburger.open span:nth-child(3) {
  transform: rotate(-45deg) translate(6px, -6px);
}

/* ===== ACCOUNT DROPDOWN ===== */
.account-dropdown-wrapper {
  position: relative;
}

.account-dropdown-trigger {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 8px 16px;
  background: rgba(17, 34, 80, 0.4);
  border: 1px solid rgba(255, 189, 89, 0.2);
  border-radius: 12px;
  color: white;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  font-family: 'Montserrat', sans-serif;
}

.account-dropdown-trigger:hover {
  background: rgba(255, 189, 89, 0.1);
  border-color: #FFBD59;
  transform: translateY(-2px);
}

.account-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(147, 51, 234, 0.2));
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border: 2px solid rgba(255, 189, 89, 0.3);
}

.account-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.account-name {
  max-width: 120px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dropdown-arrow {
  transition: transform 0.3s ease;
  color: rgba(255, 255, 255, 0.7);
}

.dropdown-arrow.open {
  transform: rotate(180deg);
}

.account-dropdown-menu {
  position: absolute;
  top: calc(100% + 8px);
  right: 0;
  min-width: 220px;
  background: linear-gradient(135deg, #1a2847, #0f1b35);
  border: 2px solid rgba(255, 189, 89, 0.3);
  border-radius: 12px;
  padding: 8px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
  z-index: 1001;
  animation: dropdownSlide 0.2s ease;
}

@keyframes dropdownSlide {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.dropdown-item {
  display: flex;
  align-items: center;
  gap: 12px;
  width: 100%;
  padding: 12px 16px;
  background: transparent;
  border: none;
  border-radius: 8px;
  color: rgba(255, 255, 255, 0.9);
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  text-align: left;
  font-family: 'Montserrat', sans-serif;
}

.dropdown-item:hover {
  background: rgba(255, 189, 89, 0.1);
  color: #FFBD59;
}

.dropdown-item svg {
  color: rgba(255, 189, 89, 0.7);
  flex-shrink: 0;
}

.dropdown-item.logout {
  color: rgba(239, 68, 68, 0.9);
}

.dropdown-item.logout:hover {
  background: rgba(239, 68, 68, 0.1);
  color: #EF4444;
}

.dropdown-item.logout svg {
  color: rgba(239, 68, 68, 0.7);
}

.dropdown-divider {
  height: 1px;
  background: rgba(255, 189, 89, 0.2);
  margin: 8px 0;
}

/* Responsive */
@media (max-width: 968px) {
  .nav-label-desktop {
    display: none;
  }

  .mobile-menu-toggle {
    display: block;
  }

  .nav-menu {
    position: fixed;
    top: 70px;
    left: 0;
    right: 0;
    background: linear-gradient(135deg, #1a2847, #0f1b35);
    border-bottom: 2px solid rgba(255, 189, 89, 0.2);
    flex-direction: column;
    padding: 16px;
    gap: 12px;
    transform: translateY(-120%);
    transition: transform 0.3s ease;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
  }

  .nav-menu.open {
    transform: translateY(0);
  }

  .nav-item {
    width: 100%;
    justify-content: flex-start;
  }
}

@media (max-width: 768px) {
  .logo-text {
    display: none;
  }

  .nav-container {
    padding: 12px 16px;
    gap: 16px;
  }

  .nav-right {
    gap: 4px;
  }

  .nav-item {
    padding: 10px 16px;
  }
}

@media (max-width: 480px) {
  .logo-icon {
    font-size: 28px;
  }

  .nav-item {
    font-size: 13px;
    padding: 8px 12px;
  }

  .nav-icon {
    font-size: 16px;
  }
}
