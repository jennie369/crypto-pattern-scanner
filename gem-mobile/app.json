{
  "expo": {
    "name": "Gemral",
    "slug": "gem-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#05040B"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gemral.mobile",
      "buildNumber": "3",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "LSApplicationQueriesSchemes": [
          "fb-messenger",
          "fb-messenger-share-api",
          "whatsapp",
          "tg",
          "telegram",
          "viber",
          "zalo",
          "instagram",
          "twitter",
          "fb",
          "fbapi",
          "fbauth2",
          "fbshareextension"
        ],
        "NSPhotoLibraryUsageDescription": "Cho phép truy cập thư viện ảnh để chia sẻ hình ảnh",
        "NSCameraUsageDescription": "Cho phép sử dụng camera để thực hiện cuộc gọi video và chụp ảnh",
        "NSMicrophoneUsageDescription": "Cho phép sử dụng microphone để thực hiện cuộc gọi và nhập liệu bằng giọng nói",
        "NSSpeechRecognitionUsageDescription": "Cho phép nhận dạng giọng nói để chuyển đổi thành văn bản",
        "UIBackgroundModes": ["audio", "voip"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#05040B"
      },
      "package": "com.gemral.mobile",
      "softwareKeyboardLayoutMode": "pan",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_CONNECT"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "gemral.com",
              "pathPrefix": "/courses"
            },
            {
              "scheme": "https",
              "host": "gemral.com",
              "pathPrefix": "/shop"
            },
            {
              "scheme": "https",
              "host": "gemral.com",
              "pathPrefix": "/forum"
            },
            {
              "scheme": "https",
              "host": "www.gemral.com",
              "pathPrefix": "/courses"
            },
            {
              "scheme": "https",
              "host": "www.gemral.com",
              "pathPrefix": "/shop"
            },
            {
              "scheme": "https",
              "host": "www.gemral.com",
              "pathPrefix": "/forum"
            },
            {
              "scheme": "https",
              "host": "link.gemral.app",
              "pathPrefix": "/p/"
            },
            {
              "scheme": "https",
              "host": "yinyangmasters.com",
              "pathPrefix": "/products/"
            },
            {
              "scheme": "gem"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-web-browser",
      "./plugins/withAndroidGradleFix",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "androidNavigationBar": {
      "visible": "sticky-immersive",
      "backgroundColor": "#05040B"
    },
    "androidStatusBar": {
      "barStyle": "light-content",
      "backgroundColor": "#00000000",
      "translucent": true
    },
    "extra": {
      "eas": {
        "projectId": "3c1882ea-c772-4cc8-9130-a0897978b04b"
      }
    }
  }
}
